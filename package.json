{
  "name": "api",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "build": "bun build ./src/index.ts --outdir ./build",
    "start": "bun run ./build/index.js",
    "prepare": "husky",
    "test": "vitest",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "prepare": "husky",
    "seed": "bun run ./app/utils/seed",
    "db:generate": "bun run drizzle-kit generate",
    "db:migrate": "bun run drizzle-kit migrate",
    "db:push": "bun run drizzle-kit push",
    "db:studio": "bun run drizzle-kit studio",
    "db:inspect": "bun run drizzle-kit introspect"
  },
  "dependencies": {
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.44.2",
    "drizzle-zod": "^0.8.2",
    "hono": "^4.7.11",
    "hono-pino": "^0.8.0",
    "nanoid": "^5.1.5",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "postgres": "^3.4.7",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.31.1",
    "husky": "^9.1.7",
    "@antfu/eslint-config": "^4.14.1",
    "eslint": "^9.28.0",
    "eslint-plugin-format": "^1.0.1"
  }
}

