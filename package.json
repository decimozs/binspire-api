{
  "name": "api",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "dev": "NODE_ENV=development bun run --hot src/index.ts",
    "build": "bun build ./src/index.ts --outdir ./build --target bun",
    "start": "NODE_ENV=production bun run ./build/index.js",
    "prepare": "husky",
    "test": "vitest",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "seed": "bun run ./src/util/seed.ts",
    "db:generate": "bun run drizzle-kit generate",
    "db:migrate": "bun run drizzle-kit migrate",
    "db:push": "bun run drizzle-kit push",
    "db:studio": "bun run drizzle-kit studio",
    "db:inspect": "bun run drizzle-kit introspect"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.0",
    "argon2": "^0.43.0",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.44.2",
    "drizzle-zod": "^0.8.2",
    "hono": "^4.8.0",
    "hono-pino": "^0.8.0",
    "http-status-codes": "^2.3.0",
    "nanoid": "^5.1.5",
    "nodemailer": "^7.0.3",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "postgres": "^3.4.7",
    "uuid": "^11.1.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.15.0",
    "@faker-js/faker": "^9.8.0",
    "@types/bun": "latest",
    "@types/nodemailer": "^6.4.17",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9.29.0",
    "eslint-plugin-format": "^1.0.1",
    "husky": "^9.1.7"
  }
}
